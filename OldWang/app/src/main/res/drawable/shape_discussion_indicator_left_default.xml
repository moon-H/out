<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边框颜色值 -->
    <item >
        <shape >
            <solid android:color="@color/color_title_bg" />

            <corners
                android:bottomLeftRadius="@dimen/discussion_indicator_radius"
                android:topLeftRadius="@dimen/discussion_indicator_radius" >
            </corners>
            <size android:height="30dp"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:top="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/white" />

            <corners
                android:topLeftRadius="@dimen/discussion_indicator_radius"
                android:bottomLeftRadius="@dimen/discussion_indicator_radius" />
            <size android:height="30dp"/>
        </shape>
    </item>

</layer-list>