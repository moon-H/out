<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/EEEEEE"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/lly_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_tab_item_height"
        android:background="@color/EEEEEE"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/nfc_swipe_img_margin_top"
            android:layout_marginTop="@dimen/nfc_swipe_img_margin_top_large"
            android:scaleType="fitXY"
            android:src="@drawable/card_changsha"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/nfc_swipe_img_margin_top"
            android:scaleType="fitXY"
            android:src="@drawable/pic_phone"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/nfc_swipe_text_margin_top"
        android:gravity="center"
        android:text="@string/touch_background"
        android:textColor="@color/about_app_name"
        android:textSize="@dimen/nfc_swipe_card"/>
</LinearLayout>
