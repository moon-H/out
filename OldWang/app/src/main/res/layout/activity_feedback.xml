<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/backgroud"
        android:orientation="vertical">

        <com.whl.client.view.TitleBarView
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showBack="false"
            app:showMenu="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginRight="@dimen/common_margin_right"
            android:layout_marginTop="@dimen/common_margin_top"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_content"
                style="@style/change_pwd_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_input"
                android:cursorVisible="true"
                android:gravity="left|top"
                android:hint="@string/feedback_hint"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minLines="5"
                android:scrollbars="vertical"
                android:textColorHint="@color/hint_color"
                android:textCursorDrawable="@null"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_send"
            style="@style/StyleloginButton"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/register_btn_height"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginRight="@dimen/common_margin_right"
            android:layout_marginTop="@dimen/common_margin_top"
            android:background="@color/AAAAAA"
            android:enabled="false"
            android:text="@string/send"/>
    </LinearLayout>

    <!--<include-->
    <!--android:id="@+id/progressView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--layout="@layout/progressbar_inverse"-->
    <!--android:visibility="gone" />-->

</FrameLayout>