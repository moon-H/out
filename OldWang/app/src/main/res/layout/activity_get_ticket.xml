<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.whl.client.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:showBack="true"
        app:showMenu="true"/>

    <TextView
        android:id="@+id/textview_share_desc01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/share_text_margin"
        android:layout_marginRight="@dimen/share_text_margin"
        android:layout_marginTop="@dimen/st_qr_code_margin_top1"
        android:gravity="center"
        android:text="@string/share_scan_get_ticket"
        android:textColor="#696969"
        android:textSize="@dimen/share_text_size"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/qr_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/st_qr_code_margin_top1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="@dimen/st_qr_code_size"
            android:layout_height="@dimen/st_qr_code_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_margin_top"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnShare"
        android:layout_width="@dimen/st_qr_code_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/st_qr_code_margin_top2"
        android:background="@drawable/selector_share_btn"
        android:text="@string/share_qr"
        android:textColor="@color/FFFFFF"
        android:textSize="@dimen/st_qr_code_btn_size"
        android:visibility="visible"/>


</LinearLayout>