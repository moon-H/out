<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bottom_bar_height"
              android:background="@color/bottom_bg_nor"
              android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/E5E5E5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lly_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/F5F5F5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_bar_text_margin_top"
                android:background="@drawable/selector_main_page"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tv_left"
                style="@style/StyleBottomBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_bar_text_margin_bottom"
                android:layout_marginTop="@dimen/bottom_bar_text_margin_top"
                android:text="@string/app"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lly_center_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/F5F5F5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_center_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bottom_bar_text_margin_top"
                android:background="@drawable/selector_nfc_card"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tv_center_left"
                style="@style/StyleBottomBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_bar_text_margin_bottom"
                android:layout_marginTop="@dimen/bottom_bar_text_margin_top"
                android:text="@string/bbs"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/lly_center_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/F5F5F5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_center_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_bar_text_margin_top"
                    android:background="@drawable/selector_my"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tv_center_right"
                    style="@style/StyleBottomBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/bottom_bar_text_margin_bottom"
                    android:layout_marginTop="@dimen/bottom_bar_text_margin_top"
                    android:text="@string/event"/>
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/lly_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/F5F5F5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_bar_text_margin_top"
                    android:background="@drawable/selector_order"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tv_right"
                    style="@style/StyleBottomBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/bottom_bar_text_margin_bottom"
                    android:layout_marginTop="@dimen/bottom_bar_text_margin_top"
                    android:text="@string/order"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="top|center"
                android:layout_marginBottom="@dimen/badge_margin_bottom"
                android:layout_marginLeft="@dimen/badge_margin_left"
                />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>