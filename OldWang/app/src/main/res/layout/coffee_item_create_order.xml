<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:paddingBottom="15dp"
    android:background="@color/coffee_white">

    <ImageView
        android:id="@+id/iv_order_img"
        android:layout_width="@dimen/coffee_create_order_img_width"
        android:layout_height="@dimen/coffee_create_order_img_height"
        android:layout_marginLeft="@dimen/coffee_create_order_img_width_left"
        android:layout_marginRight="@dimen/coffee_create_order_img_width_right" />

    <RelativeLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_order_img">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美式咖啡"
                android:textColor="@color/coffee_black"
                android:textSize="@dimen/coffee_shop_into" />

            <TextView
                android:id="@+id/tv_kw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冷饮"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/coffee_text_color"
                android:textSize="@dimen/coffee_text_used" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:layout_below="@+id/tv_kw"
                android:textColor="@color/item_FF4C0D"
                android:textSize="@dimen/coffee_shop_into" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/coffee_create_order_add_width"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_quantity"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_minus"
                    android:layout_width="@dimen/coffee_create_order_minus_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_minus_click" />

                <TextView
                    android:id="@+id/tv_total_count"
                    android:layout_width="@dimen/coffee_create_order_total_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/coffee_black"
                    android:textSize="@dimen/coffee_shop_kw_item_ren" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="@dimen/coffee_create_order_minus_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/coffee_create_order_minus_right"
                    android:background="@drawable/selector_add_goods" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/coffee_create_order_del_margin"
                android:layout_marginRight="@dimen/coffee_create_order_del_margin"
                android:src="@drawable/icon_del" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
