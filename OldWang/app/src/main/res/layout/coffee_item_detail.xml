<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/coffee_good_detail_layout_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/coffee_good_detail_llayout_height"
            android:background="@drawable/bg_detail_push"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/coffee_good_detail_img_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/coffee_good_detail_img_margin"
                android:layout_marginRight="@dimen/coffee_good_detail_img_margin"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvGoodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/coffee_good_detail_text_margin"
                android:layout_marginTop="@dimen/coffee_good_detail_text_margin"
                android:gravity="center"
                android:textColor="@color/item_FF4C0D"
                android:textSize="@dimen/coffee_shop_kw_submit" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_add_to_shop_cart"
            android:layout_width="@dimen/coffee_good_detail_add_img_height"
            android:layout_height="@dimen/coffee_good_detail_add_img_height"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/coffee_good_detail_add_img_margin"
            android:src="@drawable/selector_icon_add" />
    </FrameLayout>

</LinearLayout>

