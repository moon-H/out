<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/coffee_shop_car_item_height"
        android:background="@color/FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/coffee_shop_car_item_hr_margin1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coffee_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/coffee__333333"
                android:maxEms="10"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/coffee_shop_car_title_txt_size"/>

            <TextView
                android:id="@+id/tv_coffee_taste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/coffee__999999"
                android:textSize="@dimen/coffee_shop_car_title_txt_size2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/coffee_shop_car_item_hr_margin2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52"
                android:textColor="@color/coffee_FF4C0D"
                android:textSize="@dimen/coffee_shop_car_title_txt_size"/>

            <ImageView
                android:id="@+id/img_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/coffee_shop_car_item_hr_margin4"
                android:src="@drawable/selector_shopping_cart_minus"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/coffee_shop_car_item_hr_margin5"/>

            <ImageView
                android:id="@+id/img_count_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/coffee_shop_car_item_hr_margin5"
                android:src="@drawable/selector_shopping_cart_add"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/coffee_shop_car_item_hr_margin3"
            android:layout_marginRight="@dimen/coffee_shop_car_item_hr_margin3"
            android:background="@color/coffee_E6E6E6"/>
    </RelativeLayout>
</LinearLayout>
