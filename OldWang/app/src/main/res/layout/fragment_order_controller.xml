<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/FFFFFF"
              android:orientation="vertical">

    <com.whl.client.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showBack="false"
        app:showMenu="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_list_title_height"
        android:background="@color/FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="@dimen/order_list_type_width"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/_333333"
            android:textSize="@dimen/order_list_title_text_size"/>

        <ImageView
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/order_list_title_line_height"
            android:background="@color/_D2D2D2"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="@dimen/order_list_city_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/_333333"
            android:textSize="@dimen/order_list_title_text_size"/>

        <ImageView
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/order_list_title_line_height"
            android:background="@color/_D2D2D2"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="@dimen/order_list_status_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/_333333"
            android:textSize="@dimen/order_list_title_text_size"/>

        <ImageView
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/order_list_title_line_height"
            android:background="@color/_D2D2D2"/>

        <LinearLayout
            android:id="@+id/lly_condition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_filter"
                android:textColor="@color/_333333"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_order_filtrate"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/E5E5E5"/>

    <LinearLayout
        android:id="@+id/lly_order_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"/>
</LinearLayout>
