<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minHeight="@dimen/help_item_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvContent"
        style="@style/StyleSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setting_icon_margin_left"
        android:layout_marginRight="@dimen/setting_arrow_margin_right"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textSize="@dimen/help_item_text_size" />

</LinearLayout>