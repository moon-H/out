<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minHeight="@dimen/help_item_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvFaq"
        style="@style/StyleSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setting_icon_margin_left"
        android:layout_weight="1"
        android:text="@string/settings_default_launch"
        android:textSize="@dimen/setting_text_size" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/setting_arrow_margin_right"
        android:scaleType="fitXY"
        android:src="@drawable/ic_arrow" />

</LinearLayout>