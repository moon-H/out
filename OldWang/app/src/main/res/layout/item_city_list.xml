<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_search_result"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_item_margin_right"
            android:layout_marginRight="@dimen/common_item_margin_right"
            >
            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/st_city_item_height"
                android:gravity="left|center_vertical"
                android:textColor="@color/st_city_item_text"
                android:textSize="@dimen/st_city_item_textsize"/>
            <ImageView
                android:id="@+id/tv_city_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_select"
                android:visibility="gone"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/select_result_line"/>
    </LinearLayout>
</LinearLayout>
