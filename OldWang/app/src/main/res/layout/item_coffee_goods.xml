<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/order_coffee_goods_height"
              android:layout_marginTop="@dimen/order_coffee_goods_vt_margin1"
              android:background="@color/FFFFFF"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="@dimen/order_coffee_goods_height2"
        android:layout_height="@dimen/order_coffee_goods_height2"
        android:layout_marginLeft="@dimen/order_coffee_goods_hr_margin1"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_coffee_goods_hr_margin2"
        android:layout_marginRight="@dimen/order_coffee_goods_hr_margin2"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/order_coffee_goods_vt_margin2"
            android:includeFontPadding="false"
            android:textColor="@color/_333333"
            android:textSize="@dimen/order_coffee_goods_txt_size1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_taste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/order_coffee_goods_vt_margin3"
            android:includeFontPadding="false"
            android:textColor="@color/_666666"
            android:textSize="@dimen/order_coffee_goods_txt_size2"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/order_coffee_goods_vt_margin3"
            android:includeFontPadding="false"
            android:textColor="@color/_666666"
            android:textSize="@dimen/order_coffee_goods_txt_size1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/order_coffee_goods_hr_margin3"
        android:includeFontPadding="false"
        android:text="14"
        android:textColor="@color/_333333"
        android:textSize="@dimen/order_amount_txt_size"/>

</LinearLayout>