<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/order_bg"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/journey_img_margin_top"
        android:src="@drawable/pic_journey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/journey_txt_margin_top"
        android:text="@string/journey_empty"
        android:textColor="@color/_333333"
        android:textSize="@dimen/journey_txt_size"/>
</LinearLayout>
