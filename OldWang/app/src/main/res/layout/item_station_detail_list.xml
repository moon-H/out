<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_station_icon"
            android:layout_width="@dimen/st_station_detail_circle_width"
            android:layout_height="@dimen/st_station_detail_circle_width"
            android:background="@drawable/shape_circle" />


        <TextView
            android:id="@+id/tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center_horizontal"
            android:text="广州塔"
            android:textColor="@color/bottom_text_nor"
            android:textSize="@dimen/station_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="@dimen/st_station_detail_line_width"
        android:layout_height="@dimen/st_station_detail_line_height"
        android:layout_marginTop="@dimen/st_station_detail_line_margin_top"
        android:background="@color/BFD6ED" />
</LinearLayout>
