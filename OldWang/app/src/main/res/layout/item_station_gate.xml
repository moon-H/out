<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/station_gate_item_margin"
    android:layout_marginRight="@dimen/station_gate_item_margin"
    android:layout_marginTop="@dimen/station_gate_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/station_gate_height"
        android:background="@drawable/exit_bg">

        <TextView
            android:id="@+id/tv_exit_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/station_gate_textsize_margin"
            android:layout_weight="1"
            android:text="1号线"
            android:textColor="@color/bottom_text_nor"
            android:textSize="@dimen/station_gate_textsize" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/station_gate_textsize_margin"
            android:layout_weight="3"
            android:gravity="right"
            android:singleLine="true"
            android:text="1号线"
            android:textColor="@color/bottom_text_nor"
            android:textSize="@dimen/station_gate_textsize" />
    </LinearLayout>

</LinearLayout>
