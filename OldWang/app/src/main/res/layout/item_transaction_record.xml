<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/DFDFDF"
              android:gravity="center"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/transaction_list_item_width"
        android:layout_height="@dimen/transaction_list_item_height"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lly_left_icon_bg"
            android:layout_width="@dimen/transaction_list_icon_width"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/transaction_list_icon_width2"
            android:layout_height="@dimen/transaction_list_item_height"
            android:layout_gravity="center|right"
            android:background="@drawable/bg_white"
            android:gravity="center|left"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lly_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/transaction_list_type_margin_left"
                    android:gravity="center"
                    android:textColor="@color/_603D0D"
                    android:textSize="@dimen/transaction_list_middleTxtSize"/>

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/transaction_list_type_margin_left_small"
                    android:gravity="center"
                    android:textColor="@color/my_service_detail_item_amount"
                    android:textSize="@dimen/transaction_list_largeTxtSize"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/transaction_list_date_margin_bottom"
                android:layout_marginLeft="@dimen/transaction_list_type_margin_left"
                android:gravity="center"
                android:textSize="@dimen/transaction_list_smallTxtSize"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/transaction_list_line_margin_left"
            android:src="@drawable/decorative_rib"
            />
    </FrameLayout>

</LinearLayout>