<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center"
        android:background="@color/FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"/>

        <TextView
            android:id="@+id/tv_tansact_hist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:layout_marginLeft="@dimen/service_detail_bottom_icon_margin_left"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/transaction_record"
            android:textColor="@color/textview_color"
            android:textSize="@dimen/service_detail_bottom_txt_size"
            />
    </LinearLayout>
</LinearLayout>
