<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_list_item_content_margin"
        android:layout_marginRight="@dimen/message_list_item_content_margin"
        android:background="@drawable/bg_message"
        >

        <LinearLayout
            android:id="@+id/lly_msg_type_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/msg_type_img_title"
                    style="@style/inbox_message_title_style"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/message_title_height"
                    android:layout_marginLeft="@dimen/message_title_marleft"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/msg_title_text_size"/>

                <ImageView
                    android:id="@+id/msg_type_img_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_new"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_pic_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/message_pic_height"
                    android:layout_marginLeft="@dimen/message_title_marleft"
                    android:layout_marginRight="@dimen/message_title_marleft"
                    android:background="@color/FFEFEEF4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pic_message"
                        android:visibility="visible"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_pic_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/message_pic_height"
                    android:layout_marginLeft="@dimen/message_title_marleft"
                    android:layout_marginRight="@dimen/message_title_marleft"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/msg_img_date_height"
                    android:layout_marginLeft="@dimen/msg_date_margin"
                    android:layout_marginRight="@dimen/msg_date_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/touch_message_all"
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/msg_read_text_size"/>

                    <TextView
                        android:id="@+id/msg_type_img_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="2017-06-15"
                        android:textColor="@color/_999999"
                        android:textSize="@dimen/mesageDate_size"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_msg_type_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/message_title_margintop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/msg_type_word_title"
                    style="@style/inbox_message_title_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/message_title_marleft"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/msg_title_text_size"/>

                <ImageView
                    android:id="@+id/msg_type_word_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_new"/>
            </LinearLayout>

            <TextView
                android:id="@+id/msg_type_word_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/message_title_marleft"
                android:layout_marginRight="@dimen/message_title_marleft"
                android:layout_marginTop="@dimen/message_content_short_top"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/_999999"
                android:textSize="@dimen/message_content_text_size"/>

            <ImageView
                android:id="@+id/iv_line_items"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:layout_marginLeft="@dimen/message_margin_left"
                android:layout_marginRight="@dimen/message_margin_left"
                android:layout_marginTop="@dimen/message_items_line_marin_top"
                android:background="@color/C7C7C7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/msg_word_date_height"
                android:layout_marginLeft="@dimen/msg_date_margin"
                android:layout_marginRight="@dimen/msg_date_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/touch_message_all"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/msg_read_text_size"/>

                <TextView
                    android:id="@+id/msg_type_word_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/_999999"
                    android:textSize="@dimen/mesageDate_size"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>