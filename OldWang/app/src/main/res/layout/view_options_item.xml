<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/connect_bracelet_list_item_margin_left"
    android:paddingRight="@dimen/connect_bracelet_list_item_margin_left" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="@dimen/record_pop_window_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/connect_bracelet_list_item_margin_left"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>